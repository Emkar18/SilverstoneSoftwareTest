@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="my-3 pb-5">
    <div class="container-fluid">
        <h1>Weather API</h1>
        <p class="lead">Please write a location to see the current weather location</p>

        @using (Html.BeginForm("WeatherInfo", "WeatherAPI", FormMethod.Post))
        {
            <div class="row justify-content-md-center my-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Location" name="Name" id="NameInput" required>
                </div>
                <div class="col-md-1">
                    <input type="submit" value="Confirm" class="btn btn-primary btn-block">
                </div>
        
            </div>
        }
    </div>
</div>
